<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory Management</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }
        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }
        th {
            background-color: #f4f4f4;
        }
        form {
            margin-bottom: 20px;
        }
        input, button {
            padding: 8px;
            margin: 5px 0;
        }
    </style>
</head>
<body>
    <h1>Inventory Management</h1>
    <form id="addItemForm">
        <input type="text" name="item_name" placeholder="Item Name" required />
        <input type="number" name="quantity" placeholder="Quantity" required />
        <input type="number" step="0.01" name="price" placeholder="Price" required />
        <button type="submit">Add Item</button>
    </form>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Item Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="inventoryTableBody">
            <!-- Data will populate here -->
        </tbody>
    </table>
    <script>
        async function fetchInventory() {
    try {
        const response = await fetch('fetch_inventory.php'); // Update endpoint if necessary
        if (!response.ok) {
            throw new Error("Failed to fetch inventory data.");
        }

        const data = await response.json();
        console.log("Fetched data:", data); // Debug: Inspect fetched data
        const tbody = document.getElementById('inventoryTableBody');
        tbody.innerHTML = ''; // Clear the table body

        data.forEach(item => {
            const row = `
                <tr>
                    <td>${item.ID}</td>
                    <td>${item.ItemName}</td>
                    <td>${item.Quantity}</td>
                    <td>${parseFloat(item.Price || 0).toFixed(2)}</td>
                    <td>
                        <button onclick="alert('Deleting item ' + ${item.ID})">Delete</button>
                    </td>
                </tr>
            `;
            tbody.innerHTML += row;
        });
    } catch (error) {
        console.error("Error fetching inventory:", error);
    }
}

// Call fetchInventory when the page loads
window.addEventListener('DOMContentLoaded', fetchInventory);
    </script>
</body>
</html>

